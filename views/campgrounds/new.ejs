<% layout('/layouts/boilerplate') -%>
<div class="row">
  <h1 class="text-center">キャンプ場の新規登録</h1>
  <div class="offset-md-3 col-md-6">
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <labe class="form-label" for="title">タイトル</labe>
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title"
          required
        />
        <div class="valid-feedback">OK!</div>
      </div>
      <div class="mb-3">
        <labe class="form-label" for="location">場所</labe>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
          required
        />
        <div class="valid-feedback">OK!</div>
      </div>
      <div class="valid-feedback">OK!</div>
      <div class="mb-3">
        <labe class="form-label" for="price">価格</labe>
        <div class="input-group">
          <span class="input-group-text" id="price-label">￥</span>
          <input
            type="text"
            class="form-control"
            placeholder="0"
            aria-label="価格"
            name="campground[price]"
            id="price"
            aria-describedby="price-label"
            required
          />
          <div class="valid-feedback">OK!</div>
        </div>
      </div>
      <div class="mb-3">
        <labe class="form-label" for="description">説明</labe>
        <textarea
          class="form-control"
          name="campground[description]"
          id="description"
          required
        ></textarea>
        <div class="valid-feedback">OK!</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">画像をアップロード</label>
        <input
          class="form-control"
          type="file"
          name="image"
          id="image"
          multiple
        />
      </div>
      <div class="valid-feedback">OK!</div>
      <div class="mb-3">
        <button class="btn btn-success">登録する</button>
      </div>
    </form>
    <a href="/campgrounds">戻る</a>
  </div>
</div>
